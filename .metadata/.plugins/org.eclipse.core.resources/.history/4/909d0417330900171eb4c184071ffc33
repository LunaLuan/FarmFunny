#ifndef EMOTIONANIMAL_H_
#define EMOTIONANIMAL_H_

class EmotionAnimal {
public:
	EmotionAnimal();

	int getHappyIndex();
	void setHappyIndex(int i);

	virtual void sound() = 0;
	virtual void eat() = 0;
	virtual void goOut() = 0;
	virtual void goBack() = 0;
	virtual void die() = 0;
	virtual int reproduce() = 0;

	virtual ~EmotionAnimal();

protected :
	int happyIndex;
};

#endif /* EMOTIONANIMAL_H_ */
