#ifndef ANIMAL_H_
#define ANIMAL_H_

#include<iostream>
using namespace std;

class Animal {
public:
	Animal();

	getName();
	setName(string n);

	getAge();
	setAge();



	virtual ~Animal();

protected:
	string name;
	int age;
	float weight;
	int price;
};

#endif /* ANIMAL_H_ */
