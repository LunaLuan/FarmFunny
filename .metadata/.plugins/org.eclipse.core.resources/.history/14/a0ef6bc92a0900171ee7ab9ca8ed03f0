#ifndef PIG_H_
#define PIG_H_

#include "Animal.h"

class Pig: public Animal {
public:
	Pig();

	virtual void sound() = 0;
	virtual void eat() = 0;
	virtual void goOut() = 0;
	virtual void goBack() = 0;
	virtual void die() = 0;
	virtual void reproduce() = 0;


	virtual ~Pig();
};

#endif /* PIG_H_ */
